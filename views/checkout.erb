<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Include CDN JavaScript -->
  <script src="https://unpkg.com/tailwindcss-jit-cdn"></script>
  <style>
  html {
   font-size: 20px;
  }
  </style>
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
</head>
<body class="bg-gray-100">
  <div class="my-8 mx-auto p-4 max-w-xl">
    <h1 class="text-2xl text-gray-700 font-bold">Checkout</h1>

    <div class="mt-4 flex flex-col bg-white shadow">
      <% products.each do |product| %>
        <div class="flex items-center justify-between gap-x-2 py-1 px-4 border-b border-gray-200">
          <div class="flex flex-row items-center">
            <div class="relative p-2">
              <img src="<%= product.name %>.png" alt="<%= product.name %>" class="rounded w-12 h-12">
              <div class="absolute right-0 top-0 rounded-full bg-gray-600 opacity-75 text-white text-sm px-1.5">
                <span><%= product.quantity %></span>
              </div>
            </div>
            <p class="ml-2 text text-gray-700 font-semibold capitalize"><%= product.name %></p>
          </div>
          <div class="text-right">
            <p class="text text-gray-700 font-semibold"><span><%= product.price_formatted %></span></p>
          </div>
        </div>
      <% end %>
    </div>

    <% if has_discount %>
      <h1 class="mt-6 text-xl text-gray-700 font-bold">Discount</h1>
      <div class="mt-4 text-right bg-white shadow p-4">
        <p class="text text-green-500 font-semibold">- <span><%= discount %></span></p>
      </div>
    <% end %>

     <h1 class="mt-6 text-xl text-gray-700 font-bold">Total</h1>
    <div class="mt-4 text-right bg-white shadow p-4">
      <p class="text text-black font-semibold"><span><%= total %></span></p>
    </div>
  </div>
</body>
</html>